{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "./src",
    "paths": {
        "@app/*": ["app/*"],
        "@config/*": ["app/_config/*"],
        "@environment/*": ["environments/*"],
        "@shared/*": ["app/_shared/*"],
        "@framework/*": ["app/framework/*"],
        "@features/*": ["app/features/*"],
        "@services/*": ["app/features/services/*"],
        "@validators/*": ["app/features/validators/*"],
        "@helpers/*": ["helpers/*"],
        "@utils/*": ["utils/*"]
    }
  }
}
